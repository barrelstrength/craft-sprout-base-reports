
{% import "_includes/forms" as forms %}

<h4>Line Chart </h4>
{{ forms.textField({
    label: "Label column"|t,
    id: 'visualizationLabelColumn',
    name: 'labelColumn',
    instructions: "Set the column from the report to be used as the labels in the visualization"|t,
    value: settings.labelColumn
  })
}}

{% for dataColumn in settings.dataColumn %}

{{ forms.textField({
    label: "Data column"|t,
    id: 'visualizationDataColumn',
    name: 'dataColumn[]',
    instructions: "Set the column from the report to be used as the data series in the visualization"|t,
    value: dataColumn
    })
}}

{% endfor %}

<button class="btn submit js-add-data-series">Add Data Series</button>


